<%- include('layouts/header') %>
<div class="alert alert-info alert-dismissible fade show" role="alert">
  <h6><%= message ? message : ' ' %></h6>
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

<%- include('layouts/sidebar') %>
     

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

<%- include('layouts/topnav') %>


<a href="/admin/addUser">Add User</a>
<table class="table table-hover table-light">
    <thead>
      <tr>
        <th scope="col">Serial No.</th>
        <th scope="col">Role</th>
        <th scope="col">Image</th>
        <th scope="col">First Name</th>
        <th scope="col">Last Name</th>
        <th scope="col">Email</th>
        <th scope="col">Phone</th>
        <th>Action</th>
        
      </tr>
    </thead>
    <tbody>
        <% table_data.map((data,index) =>{
            %>
            <tr>
                <th scope="row"><%= index+1 %></th>
                <td><%= data.role%></td>
                <td><img src="/uploads/<%= data.image%>" alt="" width="60px" height="55px"></td>
                <td><%= data.firstName%></td>
                <td><%= data.lastName%></td>
                <td><%= data.email%></td>
                <td><%= data.phone%></td>
                <td><a href="/admin/edit/<%=data._id%>" <i class="fa-solid fa-user-pen"></i></a></td>
                <td><a href="/admin/delete/<%=data._id%>" <i class="fa-solid fa-user-minus"></i></a></td>

            </tr>       
        <%
        })
        %>
    </tbody>
  </table>
</div>
</div>
</div>
  <%- include('layouts/footer')%>
  <%- include('layouts/siteFooter')%>