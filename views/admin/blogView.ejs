<%- include('layouts/header') %>


<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

<%- include('layouts/sidebar') %>
     

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

<%- include('layouts/topnav') %>
<div class="alert alert-info alert-dismissible fade show" role="alert">
  <h6><%= message ? message : ' ' %></h6>
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
<h3>Blogs</h3>
<a href="/admin/blogForm">Create Blog</a>
<br>

<table class="table table-hover table-light">
    <thead>
      <tr>
        <th scope="col">Serial No.</th>
        <th scope="col">Title</th>
        <th scope="col">Date</th>
        <th scope="col">Writer</th>
        <th scope="col">Content</th>
        <th scope="col">Image</th>
        <th>Action</th>
        
      </tr>
    </thead>
    <tbody>
    
            <% blogData.map((data,index) =>{ %>
            <tr>
            <th scope="row"><%= index+1 %></th>
            <td><%= data.title%></td>
            <td><%= data.date%></td>
            <td><%= data.writer%></td>
            <td><%= data.content%></td>
            <td><img src="/uploads/<%= data.image%>" alt="" width="60px" height="55px"></td>
            <td><a href="/admin/editBlog/<%=data._id%>" <i class="fa-solid fa-pen-to-square"></i></a></td>
            <td><a href="/admin/deleteBlog/<%=data._id%>" <i class="fa-solid fa-trash"></i></a></td>
            <% }) %>
        </tr>
    </tbody>


        </div>
    </div>

 </div>

 <%- include('layouts/footer')%>
 <%- include('layouts/siteFooter')%> 